@import 'theme.styl'

.hero, .navbar .site-name, .navbar .nav-link, .search-box input
  color: #eaecef!important

.hero
  background-color: #21242B!important

.home .features
  margin-top: 0;

.footer
  border-top: 1px solid #ddd!important;

.navbar, .navbar .links
  background-color: #21242B!important

.features, .footer
  background-color: white!important

.search-box input
  background-color: #313437

.feature
  border-radius: 10px
  padding: 0 15px
  position: relative
  margin: 0 10px

.feature::after
  content: '';
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  opacity: 0;
  border-radius: 5px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
  transition: opacity 0.3s ease-in-out;
  left: 0
  top: 0

.page img:not(.no-shadow)
  box-shadow: 0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19) !important;